pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t elad:latest --target build .'
            }
        }
        stage('test') {
            steps {
                sh 'DOCKER_BUILDKIT=1 docker build -t elad:latest --target test .'
            }
        }
    }
}
